{
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-views && npm run copy-public",
    "clean": "shx rm -rf dist",
    "copy-views": "shx cp -r src/views/ dist",
    "copy-public": "shx cp -r src/public/ dist/public",
    "start": "concurrently --kill-others \"npm:client\" \"npm:web-service\"",
    "client": "node dist/client.js",
    "web-service": "node dist/webapi.js"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-oauth2-jwt-bearer": "^1.1.0",
    "fs": "0.0.1-security",
    "https": "^1.0.0",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.8.6",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "concurrently": "^7.4.0",
    "shx": "^0.3.4"
  }
}
